    <GridLayout columns="*" rows="100, 120, 120, 120">
                <Label row="0" col="0" text="Soluções Realize" verticalAlignment="top" class="fonteSolRealize" style="color:#4c605f"  ></Label>

                <GridLayout row="1" col="0" rows="30,30,30" columns="200,100" class="saldoBox" style="background-color:white; border-width:0" >
				     <Label row="0" col="0" text="Assessoria Financeira" style="font-size: 18;"  ></Label>                      
                     <Label row="0" col="1" text="R$ 80,00" style="font-size: 18; font-weight: bold; color:#4c605f" ></Label>  
