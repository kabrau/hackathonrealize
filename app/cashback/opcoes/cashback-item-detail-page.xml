                     <Label row="2" col="0" text="Valido até 19/10/2020"  ></Label>                          
			    </GridLayout>  

                <GridLayout row="3" col="0" rows="30,30,30" columns="200,100" class="saldoBox" style="background-color:white; border-width:0" >
				     <Label row="0" col="0" text="Limite Cartão" style="font-size: 18;"  ></Label>                      
                     <Label row="0" col="1" text="R$ 45,00" style="font-size: 18; font-weight: bold;; color:#4c605f" ></Label>  
                     <Label row="1" col="0" text="Aumentar limite cartão"  ></Label>      
                     <Label row="2" col="0" text="Valido até 19/10/2020"  ></Label>                        
