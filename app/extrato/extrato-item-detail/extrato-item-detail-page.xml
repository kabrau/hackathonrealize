<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back"/>
        <Label class="action-bar-title" text="{{ name }}"></Label>
    </ActionBar>

    <GridLayout rows="40,40,40,40,40">
        <Label row="0" class="m-10 h3" text="{{ date }}" verticalAlignment="top" ></Label>
        <Label row="1" class="m-10 h3" text="{{ name }}" verticalAlignment="top" ></Label>
        <Label row="2" class="m-10 h3" text="{{ tag }}" verticalAlignment="top" ></Label>
        <Label row="3" class="m-10 h3" text="{{ value }}" verticalAlignment="top" ></Label>
        <Label row="4" class="m-10 h3" text="{{ description }}" verticalAlignment="top" ></Label>
        
    </GridLayout>
</Page>